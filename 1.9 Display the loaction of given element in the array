//Find location of element and print it
#include<stdio.h>

int main(){
	printf("Name: Philip Gracian Sanova\nReg No:192324023\n");
	int n,i,j;
	printf("Enter the size of array :");
	scanf("%d",&n);  
	int arr[n];
	printf("\nEnter elements of array :");
	for(i=0;i<n;i++){
		scanf("%d",&arr[i]);
	}
	printf("\nEnter the element you want to find:");
	scanf("%d",&j);
   	for(i=0;i<n;i++){
   		if(arr[i]==j){
   			printf("%d is found in index value %d ",j,i);
   			return 0;
		   }
	}
	printf("Element is not in the array");
	return 0;
}
