//Sum of Rows and Columns
#include <stdio.h>

int main() {
    printf("Name: Philip Gracian Sanova\nReg No:192324023\n");
    int r,c;
    printf("Enter the no. of rows and Columns of the Matrix:");
    scanf("%d %d",&r,&c);
    int mat[r][c];
    printf("\nEnter the elements of the matrix:\n");
    for(int i=0;i<r;i++){
    	for(int j=0;j<c;j++)
    	scanf("%d",&mat[i][j]);
	}
	int sum;
	for(int i=0;i<r;i++){
		sum=0;
    	for(int j=0;j<c;j++){
    		sum=sum+mat[i][j];
		}
		printf("\nSum of row %d is %d",i+1,sum);
	}
	for(int i=0;i<c;i++){
		sum=0;
		for(int j=0;j<r;j++){	
			sum=sum+mat[j][i];
		}
		printf("\nSum of column %d is %d",i+1,sum);
	}

    return 0;
}
