//Binary Search
#include <stdio.h>
void swap(int a, int b){
    int temp=a;
    a=b;
    b=temp;
}
void sorting(int array[], int n){
    for (int i=0;i<n-1;i++){
        for (int j=0;j<n-i-1;j++){
            if (array[j]>array[j+1]){
                swap(array[j],array[j+1]);
            }
        }
    }
}
int search(int array[], int left, int right, int target) {
    while (left<=right){
        int mid=left+(right-left)/2;
        if(array[mid]==target)
            return mid;
        else if(array[mid]<target)
        left=mid+1;
        else
        right=mid-1;
        
    }
    return -1;
}

int main() {
    printf("Name: Philip Gracian Sanova\nReg no: 192324023\n");
    int n;
    printf("Enter the size of the array: ");
    scanf("%d",&n);
    int array[n];
    printf("Enter elements for the array:");
    for (int i=0;i<n;i++) {
        scanf("%d",&array[i]);
    }
    sorting(array,n);
    int target;
    printf("Enter the target to search: ");
    scanf("%d",&target);
    int result=search(array,0,n-1,target);
    if(result!=-1)
    printf("\nElement is found in the given array");
    else
    printf("\nElement is not found in the given array");
    
    return 0;
}
