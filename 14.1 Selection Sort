#include <stdio.h>

void swap(int*a,int *b){
	int temp=*a;
	*a=*b;
	*b=temp;
	return;
}

void select(int arr[],int n){
	int k=1;
	int min=arr[0];
	int begin=0;
	while(k<=n-1){
		int j;
		for(int i=begin;i<n;i++){
			if(arr[i]<min){
				j=i;
			}
		}
		swap(&arr[j],&arr[begin]);
		begin++;
		min=arr[begin];
		k++;
	}
	return;
}

int main() {
	printf("Name: Philip Gracian Sanova\nReg no: 192324023\n");
    int arr[] = {7,4,11,9,3,2};
    select(arr,6);
    for(int i=0;i<6;i++){
    	printf("%d ",arr[i]);
	}
    return 0;
}
