//Merging arrays
#include<stdio.h>

int main(){
	printf("Name: Philip Gracian Sanova\nReg No:192324023\n");
	int n1,n2,i;
	printf("Enter the size of array 1:");
	scanf("%d",&n1);  
	int arr1[n1];
	printf("\nEnter elements of array 1:");
	for(i=0;i<n1;i++){
		scanf("%d",&arr1[i]);
	}
    printf("\nEnter the size of array 2:");
	scanf("%d",&n2);
	int arr2[n2];
	printf("\nEnter elements of array 2:");
	for(i=0;i<n2;i++){
		scanf("%d",&arr2[i]);
	}
	int n3=n1+n2,arr3[n3],k=0;
	for(i=0;i<n1;i++){
		arr3[i]=arr1[i];
		k++;
	}
	for(i=0;i<n2;i++){
		arr3[k]=arr2[i];
		k++;
	}
	printf("\nThe merged array is:");
	for(i=0;i<n3;i++){
		printf("%d ",arr3[i]);
	}
	return 0;
}
