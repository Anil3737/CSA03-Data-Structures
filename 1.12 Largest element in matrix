//Largest element in Matrix
#include <stdio.h>

int main() {
    printf("Name: Philip Gracian Sanova\nReg No:192324023\n");
    int r,c;
    printf("Enter the no. of rows and Columns of the Matrix:");
    scanf("%d %d",&r,&c);
    int mat[r][c];
    printf("\nEnter the elements of the matrix:\n");
    for(int i=0;i<r;i++){
    	for(int j=0;j<c;j++)
    	scanf("%d",&mat[i][j]);
	}
	int max=mat[0][0];
	for(int i=0;i<r;i++){
    	for(int j=0;j<c;j++){
    		if(mat[i][j]>max)
    		max=mat[i][j];
		}
	}
	printf("\nThe largest element in the matrix is %d",max);
    return 0;
}
